<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopcart Admin Registration</title>
    <!-- favicon -->
    <link rel="icon" href="https://i.imgur.com/SkliARr.png" type="image/x-icon">
    <link rel="shortcut icon" href="https://i.imgur.com/SkliARr.png" type="image/x-icon">
    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Font Awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- CSS File -->
    <link href="../style.css" rel="stylesheet">
    </link>
    <style>
        .title {
            text-shadow: 0 0 3px #0000ff, 0 0 3px #0000ff;

        }

        .logo {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .password-input {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-field {
            padding-right: 30px;
            /* Add space for the icon */
        }

        .toggle-icon {
            position: absolute;
            right: 10px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <% if (alert=="yes" ) { %>
        <script> alert("You are successfully Registered!")</script>
        <script>window.location.href = "/admin/login"</script>

        <% } %>
            <div class="container-fluid p-0">
                <!-- first Child -->
                <nav class="navbar navbar-expand-lg navbar-light bg-info p-1">
                    <div class="container-fluid pl-0">
                        <div style="width:200px; height:60px;" class="d-flex">
                            <img src="https://i.imgur.com/SkliARr.png" alt="" class="logo">
                            <span class="d-flex align-items-center">
                                <h3 class="text-center fw-2 text-warning pt-1 title ps-0">Shopcart</h3>
                            </span>
                        </div>
                    </div>
                </nav>

                <!--<h2 class="text-center fw-bold mt-3 fs-1">Admin Registration</h2>-->
                <div class="d-flex justify-content-center mt-5 py-4 mb-5 container"
                    style="background-color:skyblue;border-radius:15px;">
                    <!--<div class="col-lg-6 col-xl-5">-->
                    <img src="https://i.imgur.com/Ku7Zhhp.png" alt="Admin Registration" class="img-fluid" width="30%"
                        height="30%" style="object-fit:contain;">
                    <!--</div>-->
                    <div class="col-lg-7 col-xl-7">
                        <h2 class="text-center fw-bold fs-1">Admin Registration</h2>
                        <form action="" method="post" enctype="multipart/form-data"
                            style="background-color:#eee; border-radius:15px;" class="px-3 py-3">

                            <div class="bg-danger text-light fw-bold text-center">
                                <p>
                                    <%= message %>
                                </p>
                            </div>

                            <!-- name -->
                            <div class="form-outline mb-3">
                                <label for="adminName" class="form-label mb-0 fw-bold">Name</label>
                                <input type="text" id="adminName" name="adminName" placeholder="Enter Name"
                                    class="form-control" value="<%= adminName %>">
                                <span class="text-danger fw-bold" style="font-size:10px;">
                                    <%= adminNameError %>
                                </span>
                            </div>

                            <!-- email -->
                            <div class="form-outline mb-3">
                                <label for="adminEmail" class="form-label mb-0 fw-bold">Email</label>
                                <input type="email" id="adminEmail" name="adminEmail" placeholder="abc@gmail.com"
                                    class="form-control" value="<%= adminEmail %>">
                                <span class="text-danger fw-bold" style="font-size:10px;">
                                    <%= adminEmailError %>
                                </span>
                            </div>

                            <!-- image -->
                            <div class="form-outline mb-3">
                                <label for="adminImage" class="form-label mb-0 fw-bold ">Image</label>
                                <input type="file" id="adminImage" name="adminImage" class="form-control" value=""
                                    placeholder="Upload Image">
                                <span class="text-danger fw-bold" style="font-size:10px;">
                                    <%= adminImageError %>
                                </span>
                            </div>

                            <!-- password -->
                            <div class="form-outline mb-3">
                                <label for="adminPassword" class="form-label mb-0 fw-bold ">Password</label>
                                <div class="password-input">
                                    <input type="password" id="adminPassword" name="adminPassword" class="form-control"
                                        placeholder="Enter 8 characters password" autocomplete="off"
                                        value="<%= adminPassword %>">
                                    <span class="toggle-icon" id="toggleIcon" onclick="togglePassword()">
                                        <i class="fas fa-eye-slash"></i>
                                    </span>
                                </div>
                                <span class="text-danger fw-bold" style="font-size:10px;">
                                    <%= adminPasswordError %>
                                </span>
                            </div>

                            <!-- confirm password -->
                            <div class="form-outline mb-3">
                                <label for="adminConfPassword" class="form-label mb-0 fw-bold">Confirm Password</label>
                                <div class="password-input">
                                    <input type="password" id="adminConfPassword" name="adminConfPassword"
                                        class="form-control" placeholder="Confirm Password" autocomplete="off"
                                        value="<%= adminConfPassword %>">
                                    <span class="toggle-icon" id="toggleConfIcon" onclick="toggleConfPassword()">
                                        <i class="fas fa-eye-slash"></i>
                                    </span>
                                </div>
                                <span class="text-danger fw-bold" style="font-size:10px;">
                                    <%= adminConfPasswordError %>
                                </span>
                            </div>

                            <!-- captcha -->
                            <div class="form-outline mb-3">
                                <label for="captcha" class="form-label mb-0 fw-bold">Captcha</label>
                                <input type="text" id="captcha" name="captcha" class="form-control"
                                    placeholder="Enter characters here" value="">
                                <span class="text-danger fw-bold p-0" style="font-size:10px;">
                                    <%= captcha_error %>
                                </span>
                                <p class="mt-2 text-center">
                                    <img src="data:image/svg+xml;charset=utf-8,<%= encodeURIComponent(captchaText) %>"
                                        alt="CAPTCHA" id="captchaImage">
                                    <a class="refresh-icon text-secondary px-1 text-light" onclick="refreshCaptcha()"
                                        style="background-color:blue; border-radius:50%;">
                                        <i class="fas fa-sync-alt"></i>
                                    </a>
                                </p>
                            </div>
                            <div>
                                <input type="submit" value="Register" class="bg-info py-2 px-3 border-0"
                                    name="admin_registration">
                                <p class="small fw-bold mt-2 pt-1">Already have an account? <a href="/admin/login"
                                        class="text-danger fw-bold text-decoration-none">Login</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <script>
                function refreshCaptcha() {
                    fetch('/refresh-captcha')
                        .then(response => response.json())
                        .then(data => {
                            document.getElementById('captchaImage').src = 'data:image/svg+xml;charset=utf-8,' + encodeURIComponent(data.captchaText);
                        })
                        .catch(error => console.error('Error refreshing captcha:', error));
                }
                function togglePassword() {
                    var passwordField = document.getElementById("adminPassword");
                    var toggleIcon = document.getElementById("toggleIcon");

                    if (passwordField.type == "password") {
                        passwordField.type = "text";
                        toggleIcon.innerHTML = '<i class="fas fa-eye"></i>';
                    } else {
                        passwordField.type = "password";
                        toggleIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
                    }
                }
                function toggleConfPassword() {
                    var passwordField = document.getElementById("adminConfPassword");
                    var toggleIcon = document.getElementById("toggleConfIcon");

                    if (passwordField.type == "password") {
                        passwordField.type = "text";
                        toggleIcon.innerHTML = '<i class="fas fa-eye"></i>';
                    } else {
                        passwordField.type = "password";
                        toggleIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
                    }
                }</script>
</body>

</html>